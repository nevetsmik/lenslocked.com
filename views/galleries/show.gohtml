{{define "yield"}}
    <div class="row">
        <div class="col-md-12">
            <h1>
                {{ .Title }}
            </h1>
            {{range .ImagesSplitN 6}}
                <div class="col-md-2">
                    {{range .}}
                        <a href="{{.Path}}">
                            <img src="{{.Path}}" class="thumbnail">
                        </a>
                    {{end}}
                </div>
            {{end}}
        </div>
    </div>
{{end}}
